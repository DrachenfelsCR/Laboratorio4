<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HistorialAlumnoAdminActivity">

    <Button
            android:text="BUSCAR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnAdminBuscarHistorial"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="309dp"
            android:layout_height="44dp"
            android:inputType="textPersonName"
            android:text="777"
            android:ems="10"
            android:id="@+id/etAdminHistorialBuscar"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="409dp"
            android:layout_height="681dp"
            app:layout_constraintTop_toBottomOf="@+id/etAdminHistorialBuscar"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/listRecyclerViewHistorialAdmin"/>
</androidx.constraintlayout.widget.ConstraintLayout>