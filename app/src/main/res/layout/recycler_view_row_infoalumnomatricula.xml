<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="10dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="Curso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tvAlumnoMatricularCurso"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="12dp" android:layout_marginStart="16dp"/>
            <TextView
                    android:text="N.Grupo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tvAlumnoMatricularNGrupo"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="44dp"
                    app:layout_constraintStart_toEndOf="@+id/tvAlumnoMatricularIdProfesor"
                    android:layout_marginStart="24dp"/>
            <TextView
                    android:text="Id Profesor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tvAlumnoMatricularIdProfesor"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="16dp"/>
            <TextView
                    android:text="Hora de Inicio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tvAlumnoMatricularHoraInicio"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="12dp" app:layout_constraintStart_toEndOf="@+id/tvAlumnoMatricularCurso"
                    android:layout_marginStart="156dp"/>
            <TextView
                    android:text="Hora de fin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tvAlumnoMatricularHoraFin"
                    app:layout_constraintTop_toBottomOf="@+id/tvAlumnoMatricularHoraInicio"
                    android:layout_marginTop="12dp" app:layout_constraintStart_toEndOf="@+id/tvAlumnoMatricularNGrupo"
                    android:layout_marginStart="48dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>