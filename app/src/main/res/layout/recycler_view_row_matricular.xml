<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="100dp">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_margin="5dp"
            app:cardBackgroundColor="#8A94C8" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="388dp"
                android:layout_height="match_parent">


            <TextView
                    android:text="Curso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tvMatricularCurso"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="8dp" android:layout_marginStart="16dp"/>
            <TextView
                    android:text="N.Grupo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tvMatricularNumGrupo"
                    app:layout_constraintTop_toBottomOf="@+id/tvMatricularCurso"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                    android:layout_marginTop="7dp"/>
            <TextView
                    android:text="Id Profesor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tvMatricularIdProfesor"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toEndOf="@+id/tvMatricularCurso" android:layout_marginStart="36dp"/>
            <TextView
                    android:text="Hora Inicio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tvMatricularHoraIni"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="36dp"/>
            <TextView
                    android:text="Hora Fin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tvMatricularHoraFin"
                    app:layout_constraintTop_toBottomOf="@+id/tvMatricularHoraIni"
                    android:layout_marginTop="8dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="48dp"/>
            <TextView
                    android:text="Id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tvMatricularId"
                    app:layout_constraintStart_toEndOf="@+id/tvMatricularNumGrupo" android:layout_marginStart="20dp"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/tvMatricularIdProfesor"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>