<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_margin="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.001" app:cardBackgroundColor="#99DA9C">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="388dp"
                android:layout_height="match_parent">
            <TextView
                    android:text="AÃ±o"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content" android:id="@+id/tvCicloAnnio"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"/>
            <TextView
                    android:text="N.Ciclo"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content" android:id="@+id/tvCicloNCiclo"
                    app:layout_constraintTop_toBottomOf="@+id/tvCicloAnnio"
                    android:layout_marginTop="4dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp" app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintVertical_bias="0.0"/>
            <TextView
                    android:text="Fecha Inicio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tvCicloFechaInicio"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="16dp" app:layout_constraintStart_toEndOf="@+id/tvCicloAnnio"
                    android:layout_marginStart="28dp"/>
            <TextView
                    android:text="Fecha Fin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tvCicloFechaFin"
                    app:layout_constraintStart_toEndOf="@+id/tvCicloNCiclo"
                    android:layout_marginStart="28dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvCicloFechaInicio" android:layout_marginTop="4dp"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.083"/>
            <TextView
                    android:text="Titulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tvCicloTitulo"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="16dp" android:textSize="24sp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="28dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>