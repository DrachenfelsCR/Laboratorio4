<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.001" app:cardBackgroundColor="#DFDCA5">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="Id Profesor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tvAdminHistorialIdProfesor"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="32dp" android:layout_marginStart="16dp"/>
            <TextView
                    android:text="Codigo Curso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tvAdminHistorialCodigoCurso"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tvAdminHistorialIdProfesor" android:layout_marginTop="32dp"
                    android:layout_marginStart="50dp"/>
            <TextView
                    android:text="Nota"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tvAdminHistorialNota"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tvAdminHistorialCodigoCurso"
                    android:layout_marginTop="32dp" android:layout_marginStart="70dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>