<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.001" app:cardBackgroundColor="#CEDFA5">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" tools:layout_editor_absoluteY="0dp"
                tools:layout_editor_absoluteX="-27dp">
            <TextView
                    android:text="Nombre Curso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tvHistorialNombreCurso"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="16dp" android:layout_marginStart="16dp" android:textSize="14sp"
                    android:textStyle="bold"/>
            <TextView
                    android:text="Id Profesor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tvHistorialIdProfesor"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvHistorialNombreCurso" android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp" android:textSize="14sp" android:textStyle="bold"/>
            <TextView
                    android:text="Codigo Curso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tvHistorialCodigoCurso"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="16dp"
                    android:textSize="14sp"
                    android:textStyle="bold" app:layout_constraintStart_toEndOf="@+id/tvHistorialNombreCurso"
                    android:layout_marginStart="24dp"/>
            <TextView
                    android:text="Nota"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tvHistorialNota"
                    app:layout_constraintTop_toBottomOf="@+id/tvHistorialCodigoCurso"
                    android:layout_marginTop="8dp"
                    android:textSize="14sp"
                    android:textStyle="bold" app:layout_constraintStart_toEndOf="@+id/tvHistorialIdProfesor"
                    android:layout_marginStart="64dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>