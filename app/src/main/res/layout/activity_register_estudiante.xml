<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegisterEstudianteActivity" android:background="@drawable/lightbluebg">

    <TextView
            android:text="Registrar Estudiante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tvRegistrarEstudiante"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" android:textSize="16sp" android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/imgBtnVolverRegistrarEstudiante"
            android:layout_marginStart="24dp"/>
    <TextView
            android:text="Estudiante Id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tvRegistrarEstudianteId"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            app:layout_constraintTop_toBottomOf="@+id/tvRegistrarEstudiante" android:layout_marginTop="44dp"/>
    <TextView
            android:text="Telefono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tvRegistrarEstudianteTelefono"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            app:layout_constraintTop_toBottomOf="@+id/tvRegistrarEstudiantePassword" android:layout_marginTop="30dp"/>
    <TextView
            android:text="Codigo Carrera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tvRegistrarEstudianteCodigoCarrera"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            app:layout_constraintTop_toBottomOf="@+id/tvRegistrarEstudianteFechaNacimiento"
            android:layout_marginTop="30dp"/>
    <TextView
            android:text="Fecha Nacimiento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tvRegistrarEstudianteFechaNacimiento"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tvRegistrarEstudianteEmail" android:layout_marginTop="28dp"/>
    <TextView
            android:text="Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tvRegistrarEstudianteEmail"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            app:layout_constraintTop_toBottomOf="@+id/tvRegistrarEstudianteTelefono" android:layout_marginTop="30dp"/>
    <TextView
            android:text="Nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tvRegistrarEstudianteNombre"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            app:layout_constraintTop_toBottomOf="@+id/tvRegistrarEstudianteId" android:layout_marginTop="30dp"/>
    <TextView
            android:text="Contraseña"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tvRegistrarEstudiantePassword"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            app:layout_constraintTop_toBottomOf="@+id/tvRegistrarEstudianteNombre" android:layout_marginTop="30dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etRegistrarEstudianteId"
            app:layout_constraintTop_toBottomOf="@+id/tvRegistrarEstudiante"
            android:layout_marginTop="28dp" app:layout_constraintStart_toEndOf="@+id/tvRegistrarEstudianteId"
            android:layout_marginStart="28dp" android:hint="Cedula"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etRegistrarEstudianteNombre"
            app:layout_constraintTop_toBottomOf="@+id/etRegistrarEstudianteId"
            android:layout_marginTop="8dp" app:layout_constraintStart_toEndOf="@+id/tvRegistrarEstudianteNombre"
            android:layout_marginStart="60dp" android:hint="Nombre"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etRegistrarEstudiantePassword"
            app:layout_constraintTop_toBottomOf="@+id/etRegistrarEstudianteNombre"
            android:layout_marginTop="8dp" app:layout_constraintStart_toEndOf="@+id/tvRegistrarEstudiantePassword"
            android:layout_marginStart="40dp" android:hint="Contraseña"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etRegistrarEstudianteTelefono"
            app:layout_constraintStart_toEndOf="@+id/tvRegistrarEstudianteTelefono" android:layout_marginStart="56dp"
            app:layout_constraintTop_toBottomOf="@+id/etRegistrarEstudiantePassword" android:layout_marginTop="4dp"
            android:hint="Telefono"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etRegistrarEstudianteEmail"
            app:layout_constraintStart_toEndOf="@+id/tvRegistrarEstudianteEmail" android:layout_marginStart="76dp"
            app:layout_constraintTop_toBottomOf="@+id/etRegistrarEstudianteTelefono" android:hint="Email"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etRegistrarEstudianteFechaNacimiento"
            app:layout_constraintTop_toBottomOf="@+id/etRegistrarEstudianteEmail"
            app:layout_constraintStart_toEndOf="@+id/tvRegistrarEstudianteFechaNacimiento"
            android:layout_marginStart="14dp" android:layout_marginTop="4dp" android:hint="DD/MM/AAAA"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etRegistrarEstudianteCodigoCarrera"
            app:layout_constraintStart_toEndOf="@+id/tvRegistrarEstudianteCodigoCarrera"
            app:layout_constraintTop_toBottomOf="@+id/etRegistrarEstudianteFechaNacimiento"
            android:layout_marginStart="16dp" android:hint="Codigo"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="?attr/homeAsUpIndicator"
            android:id="@+id/imgBtnVolverRegistrarEstudiante"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="56dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="4dp"/>
    <Button
            android:text="ENVIAR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnSubmitEstudiante"
            app:layout_constraintTop_toBottomOf="@+id/etRegistrarEstudianteCodigoCarrera"
            android:layout_marginTop="32dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="156dp" android:backgroundTint="#020202"/>
</androidx.constraintlayout.widget.ConstraintLayout>