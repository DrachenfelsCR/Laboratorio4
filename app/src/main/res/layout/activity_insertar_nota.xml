<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".InsertarNotaActivity" android:background="@drawable/teacher">

    <TextView
            android:text="Insertar Nota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tvTitleInsertarNota"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.055"
            android:layout_marginEnd="120dp" android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/imgBtnVolverInsertarNota"
            app:layout_constraintHorizontal_bias="0.741"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="?attr/homeAsUpIndicator"
            android:id="@+id/imgBtnVolverInsertarNota"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="28dp" android:layout_marginStart="44dp"/>
    <TextView
            android:text="Nombre Alumno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tvIngresarNotaNombreAlumno"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="100dp"
            app:layout_constraintTop_toBottomOf="@+id/tvTitleInsertarNota" android:layout_marginTop="76dp"
            android:textSize="20sp"/>
    <TextView
            android:text="ID Alumno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tvIngresarNotaIdAlumno"
            app:layout_constraintTop_toBottomOf="@+id/tvIngresarNotaNombreAlumno" android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="100dp" android:textSize="20sp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etIngresarNota"
            app:layout_constraintTop_toBottomOf="@+id/tvIngresarNotaIdAlumno"
            android:layout_marginTop="36dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent" android:hint="Nota"/>
    <Button
            android:text="Enviar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnEnviarNota"
            android:backgroundTint="#100E0E"
            app:layout_constraintTop_toBottomOf="@+id/etIngresarNota" android:layout_marginTop="48dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>