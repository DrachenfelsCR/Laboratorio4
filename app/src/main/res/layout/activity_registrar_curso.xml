<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegistrarCursoActivity">

    <TextView
            android:text="Insertar Curso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tvLabelRegistrarCurso"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.075"
            android:textSize="24sp" android:textStyle="bold"/>
    <TextView
            android:text="Codigo Curso"
            android:layout_width="120dp"
            android:layout_height="wrap_content" android:id="@+id/tvLabelRegistrarCursoCodigo"
            android:layout_marginTop="80dp"
            app:layout_constraintTop_toBottomOf="@+id/tvLabelRegistrarCurso"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="48dp" android:textSize="16sp"
            android:textStyle="bold"/>
    <TextView
            android:text="Creditos Curso"
            android:layout_width="120dp"
            android:layout_height="wrap_content" android:id="@+id/tvLabelRegistrarCursoCreditos"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="48dp"
            app:layout_constraintTop_toBottomOf="@+id/tvLabelRegistrarCursoNombre" android:layout_marginTop="48dp"
            android:textSize="16sp" android:textStyle="bold"/>
    <TextView
            android:text="Nombre Curso"
            android:layout_width="120dp"
            android:layout_height="wrap_content" android:id="@+id/tvLabelRegistrarCursoNombre"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="48dp"
            app:layout_constraintTop_toBottomOf="@+id/tvLabelRegistrarCursoCodigo" android:layout_marginTop="48dp"
            android:textSize="16sp" android:textStyle="bold"/>
    <TextView
            android:text="Horas Curso"
            android:layout_width="120dp"
            android:layout_height="wrap_content" android:id="@+id/tvLabelRegistrarCursoHoras"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="48dp"
            app:layout_constraintTop_toBottomOf="@+id/tvLabelRegistrarCursoCreditos" android:layout_marginTop="48dp"
            android:textSize="16sp" android:textStyle="bold"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etRegistrarCursoCodigo"
            app:layout_constraintTop_toBottomOf="@+id/tvLabelRegistrarCurso"
            android:layout_marginTop="68dp"
            app:layout_constraintStart_toEndOf="@+id/tvLabelRegistrarCursoCodigo" android:layout_marginStart="12dp"
            android:hint="CURSO200"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etRegistrarCursoNombre"
            app:layout_constraintStart_toEndOf="@+id/tvLabelRegistrarCursoNombre" android:layout_marginStart="12dp"
            app:layout_constraintTop_toBottomOf="@+id/etRegistrarCursoCodigo" android:layout_marginTop="20dp"
            android:hint="Nombre Curso"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etRegistrarCursoCreditos"
            app:layout_constraintStart_toEndOf="@+id/tvLabelRegistrarCursoCreditos" android:layout_marginStart="12dp"
            app:layout_constraintTop_toBottomOf="@+id/etRegistrarCursoNombre" android:layout_marginTop="28dp"
            android:hint="0"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etRegistrarCursoHoras"
            app:layout_constraintStart_toEndOf="@+id/tvLabelRegistrarCursoHoras" android:layout_marginStart="12dp"
            app:layout_constraintTop_toBottomOf="@+id/etRegistrarCursoCreditos" android:layout_marginTop="32dp"
            android:hint="0"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnRegistrarCurso"
            android:text="Enviar" android:backgroundTint="#3E8DE3"
            android:layout_marginTop="52dp" app:layout_constraintTop_toBottomOf="@+id/etRegistrarCursoHoras"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="152dp"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="?attr/actionModeCloseDrawable"
            android:id="@+id/imgBtnRegistrarCursoVolver"
            app:layout_constraintEnd_toStartOf="@+id/tvLabelRegistrarCurso" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="52dp" android:layout_marginEnd="24dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>