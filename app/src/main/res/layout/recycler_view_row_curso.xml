<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.001" app:cardBackgroundColor="#DFD5A5">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="388dp"
                android:layout_height="match_parent">

            <TextView
                    android:text="CODIGO"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvCodigoCarrera"
                    android:textSize="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp" app:layout_constraintVertical_bias="0.506"
                    android:textStyle="bold"/>
            <TextView
                    android:text="Nombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tvNombreCurso"
                    app:layout_constraintStart_toEndOf="@+id/tvCodigoCarrera"
                    android:layout_marginStart="24dp" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="4dp" android:textStyle="bold" android:textSize="16sp"/>
            <TextView
                    android:text="Creditos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tvCreditosCurso"
                    app:layout_constraintStart_toEndOf="@+id/tvCodigoCarrera"
                    android:layout_marginStart="28dp" app:layout_constraintTop_toBottomOf="@+id/tvNombreCurso"
                    android:layout_marginTop="8dp" android:textStyle="bold"/>
            <Button
                    android:text="Grupos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btnCursosGrupos"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="4dp" app:layout_constraintBottom_toBottomOf="parent"
                    android:backgroundTint="@color/black" app:layout_constraintVertical_bias="0.9"/>
            <TextView
                    android:text="Titulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tvCursoTitulo"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/tvNombreCurso"
                    android:layout_marginTop="4dp" android:layout_marginStart="28dp" android:textStyle="bold"/>
            <TextView
                    android:text="Horas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tvHorasCurso"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/tvCreditosCurso"
                    app:layout_constraintTop_toBottomOf="@+id/tvCursoTitulo" android:layout_marginTop="8dp"
                    android:layout_marginStart="24dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>