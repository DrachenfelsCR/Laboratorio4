<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegisterCicloActivity" android:background="@drawable/lightbluebg">

    <TextView
            android:text="Insertar Ciclo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tvLabelRegistrarCiclo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.071"
            android:textSize="24sp" android:textStyle="bold"/>
    <TextView
            android:text="Titulo"
            android:layout_width="100dp"
            android:layout_height="wrap_content" android:id="@+id/tvCicloRegistrarTitulo"
            android:textSize="16sp" android:textStyle="bold" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp" app:layout_constraintTop_toBottomOf="@+id/tvCicloRegistrarFechaFin"
            android:layout_marginTop="32dp"/>
    <TextView
            android:text="Numero Ciclo"
            android:layout_width="100dp"
            android:layout_height="wrap_content" android:id="@+id/tvCicloRegistrarNCiclo"
            android:textSize="16sp" android:textStyle="bold" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp" app:layout_constraintTop_toBottomOf="@+id/tvCicloRegistrarAnnio"
            android:layout_marginTop="32dp"/>
    <TextView
            android:text="Fecha Fin"
            android:layout_width="100dp"
            android:layout_height="wrap_content" android:id="@+id/tvCicloRegistrarFechaFin"
            android:textSize="16sp" android:textStyle="bold" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp" app:layout_constraintTop_toBottomOf="@+id/tvCicloRegistrarFechaInicio"
            android:layout_marginTop="32dp"/>
    <TextView
            android:text="AÃ±o"
            android:layout_width="100dp"
            android:layout_height="wrap_content" android:id="@+id/tvCicloRegistrarAnnio"
            android:textSize="16sp" android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/tvLabelRegistrarCiclo" android:layout_marginTop="76dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="40dp"/>
    <TextView
            android:text="Fecha Inicio"
            android:layout_width="100dp"
            android:layout_height="wrap_content" android:id="@+id/tvCicloRegistrarFechaInicio"
            android:textSize="16sp" android:textStyle="bold" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp" app:layout_constraintTop_toBottomOf="@+id/tvCicloRegistrarNCiclo"
            android:layout_marginTop="32dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etCicloRegistrarAnnio"
            app:layout_constraintStart_toEndOf="@+id/tvCicloRegistrarAnnio" android:layout_marginStart="12dp"
            app:layout_constraintTop_toBottomOf="@+id/tvLabelRegistrarCiclo" android:layout_marginTop="60dp"
            android:hint="2022"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etCicloRegistrarNCiclo"
            app:layout_constraintTop_toBottomOf="@+id/etCicloRegistrarAnnio"
            android:layout_marginTop="12dp" app:layout_constraintStart_toEndOf="@+id/tvCicloRegistrarNCiclo"
            android:layout_marginStart="12dp" android:hint="1/2"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etCicloRegistrarTitulo"
            app:layout_constraintStart_toEndOf="@+id/tvCicloRegistrarTitulo" android:layout_marginStart="12dp"
            app:layout_constraintTop_toBottomOf="@+id/etCicloRegistrarFechaFin" android:layout_marginTop="8dp"
            android:hint="Ciclo I/II"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/etCicloRegistrarFechaInicio"
            android:hint="DD/MM/AAAA" app:layout_constraintTop_toBottomOf="@+id/etCicloRegistrarNCiclo"
            android:layout_marginTop="8dp" app:layout_constraintStart_toEndOf="@+id/tvCicloRegistrarFechaInicio"
            android:layout_marginStart="12dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/etCicloRegistrarFechaFin"
            app:layout_constraintTop_toBottomOf="@+id/etCicloRegistrarFechaInicio"
            app:layout_constraintStart_toEndOf="@+id/tvCicloRegistrarFechaFin" android:layout_marginStart="12dp"
            android:hint="DD/MM/AAAA" android:layout_marginTop="8dp"/>
    <Button
            android:text="Enviar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnRegistrarCicloEnviar"
            android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/etCicloRegistrarTitulo"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="160dp"
            android:backgroundTint="#61B8DA"/>
    <ImageButton
            android:layout_width="58dp"
            android:layout_height="50dp" app:srcCompat="?attr/homeAsUpIndicator"
            android:id="@+id/imgBtnRegistrarCicloVolver"
            app:layout_constraintEnd_toStartOf="@+id/tvLabelRegistrarCiclo" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="40dp" android:layout_marginEnd="20dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>