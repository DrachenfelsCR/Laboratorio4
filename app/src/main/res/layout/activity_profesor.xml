<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/drawerLayoutProfesor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ProfesorActivity" android:background="@drawable/teacher">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:layout_width="303dp"
                android:layout_height="246dp" app:srcCompat="@drawable/professor" android:id="@+id/imageView7"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
                android:text="PROFESOR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/tvProfessorlabelactivity"
                android:textSize="24sp" android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/imageView7" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="48dp" android:layout_marginEnd="84dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.google.android.material.navigation.NavigationView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/navViewProfesor"
            app:headerLayout="@layout/nav_header"
            app:menu="@menu/nav_drawer_menu_profesor"
            android:layout_gravity="start"
            android:fitsSystemWindows="true"
    />

</androidx.drawerlayout.widget.DrawerLayout>