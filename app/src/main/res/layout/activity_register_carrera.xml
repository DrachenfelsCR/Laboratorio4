<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegisterCarreraActivity" android:background="@drawable/graybg">

    <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etRegistrarCarreraNombre"
            app:layout_constraintTop_toBottomOf="@+id/etRegistrarCarreraCodigo"
            android:layout_marginTop="44dp" app:layout_constraintStart_toEndOf="@+id/tvLabelRegistrarCarreraNombre"
            android:layout_marginStart="36dp" android:hint="Carrera"/>
    <Button
            android:text="ENVIAR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnSubmitRegistrarCarrera"
            android:layout_marginTop="84dp"
            app:layout_constraintTop_toBottomOf="@+id/etRegistrarCarreraTitulo"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="160dp"
            android:backgroundTint="#42A852"/>
    <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etRegistrarCarreraTitulo"
            app:layout_constraintTop_toBottomOf="@+id/etRegistrarCarreraNombre"
            android:layout_marginTop="44dp" app:layout_constraintStart_toEndOf="@+id/tvLabelRegistrarCarreraTitulo"
            android:layout_marginStart="36dp" android:hint="Titulo"/>
    <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etRegistrarCarreraCodigo"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/tvTituloRegistrarCarrera" android:layout_marginTop="64dp"
            app:layout_constraintStart_toEndOf="@+id/tvLabelRegistrarCarreraCodigo" android:layout_marginStart="36dp"
            android:hint="CODE100"/>
    <TextView
            android:text="Titulo Carrera"
            android:layout_width="120dp"
            android:layout_height="wrap_content" android:id="@+id/tvLabelRegistrarCarreraTitulo"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="28dp"
            app:layout_constraintTop_toBottomOf="@+id/tvLabelRegistrarCarreraNombre" android:layout_marginTop="68dp"
            android:textStyle="bold" android:textSize="16sp" android:textColor="#F3EFEF"/>
    <TextView
            android:text="Insertar Carrera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tvTituloRegistrarCarrera"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.085" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:textSize="24sp" android:textStyle="bold"
            android:textColor="#DCD7D7"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="?attr/actionModeCloseDrawable"
            android:id="@+id/imgBtnRegistrarCarreraAtras"
            app:layout_constraintEnd_toStartOf="@+id/tvTituloRegistrarCarrera" android:layout_marginEnd="36dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="56dp"/>
    <TextView
            android:text="Codigo Carrera"
            android:layout_width="120dp"
            android:layout_height="wrap_content" android:id="@+id/tvLabelRegistrarCarreraCodigo"
            android:layout_marginTop="76dp"
            app:layout_constraintTop_toBottomOf="@+id/tvTituloRegistrarCarrera"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="28dp" android:textStyle="bold"
            android:textSize="16sp" android:textColor="#ECE4E4"/>
    <TextView
            android:text="Nombre Carrera"
            android:layout_width="120dp"
            android:layout_height="wrap_content" android:id="@+id/tvLabelRegistrarCarreraNombre"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="28dp"
            app:layout_constraintTop_toBottomOf="@+id/tvLabelRegistrarCarreraCodigo" android:layout_marginTop="68dp"
            android:textStyle="bold" android:textSize="16sp" android:textColor="#EFE6E6"/>
</androidx.constraintlayout.widget.ConstraintLayout>